#ssw-add-site-review-form .ssw-socialconnect .ssw-fbconnect:hover .ssw-icon-facebook:before { 
  color: #1976f1 !important;
}

.ssw-simple-connect {
  display: flex;
}

@media (max-width: 801px) {
  .ssw-simple-connect {
    flex-direction: column;
  }
}

#widget-fave-html .ssw-fave-btn {
  width: 100%;
}

#widget-fave-html .ssw-fave-btn .ssw-fave-btn-content {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  max-height: 48px;
  min-height: 48px;

  font-size: 1.5rem;
  letter-spacing: .1rem;
  line-height: 1.2;


  text-decoration: none;
  border: 0.1rem solid transparent;
  border-radius: 0;
  background-color: white;
  color: black;
  transition: box-shadow var(--duration-short) ease;
  appearance: none; 
}

#widget-fave-html .ssw-fave-btn .ssw-fave-btn-content:hover {

  box-shadow: 0 0 0 0.2rem rgba(var(--color-button),var(--alpha-button-border));
}